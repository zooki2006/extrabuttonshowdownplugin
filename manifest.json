{
  "manifest_version": 2,
  "name": "Showdown Extra Buttons",
  "version": "1.0",

  "description": "Adds buttons to pokemon-showdown to show your showdown friends list, your cloud uploaded teams, etc",

  "icons": {
    "16": "icons/PSicon16.png",
    "32": "icons/PSicon32.png",
    "48": "icons/PSicon48.png",
    "256": "icons/PSicon256.png"
  },

  "content_scripts": [
    {
      "matches": [
	      "*://play.pokemonshowdown.com/*",
	      "*://play.radicalred.net/*",
	      "*://petmodsdh.com/*",
	      "*://*.psim.us/*"
      ],
      "js": ["scripts/content.js"]
    }
  ]
}

